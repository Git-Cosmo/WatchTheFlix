{
    "name": "watchtheflix/app",
    "description": "Laravel Stremio Clone - A Stremio-like streaming platform with Real-Debrid integration",
    "type": "project",
    "keywords": ["laravel", "streaming", "stremio", "real-debrid"],
    "license": "MIT",
    "authors": [
        {
            "name": "WatchTheFlix",
            "email": "info@watchtheflix.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "intervention/image-laravel": "^1.3",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^11.0",
        "laravel/tinker": "^2.10",
        "pragmarx/google2fa-laravel": "^2.3",
        "predis/predis": "^2.2",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-backup": "^9.0",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-sitemap": "^7.0",
        "spatie/laravel-sluggable": "^3.6",
        "spatie/laravel-tags": "^4.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
